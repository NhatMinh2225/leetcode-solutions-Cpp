class Solution {
public:
    bool isPalindrome(string s) {
        string org;
        string pal;
        int n = s.size();
        for (int i = 0; i < n; i++){
            if(isalpha(s[i])){
                org += tolower(s[i]);
            }
            if(isdigit(s[i])){
                org += s[i];
            }
        }

        for (int i = n-1; i >= 0; i--){
            if(isalpha(s[i])){
                pal += tolower(s[i]);
            }
            if(isdigit(s[i])){
                pal += s[i];
            }
        }



        for (int i = 0; i < pal.size() ; i++){

            if (pal[i] != org[i] ){

                return false;
            }

        }
        return true;

    }
};
