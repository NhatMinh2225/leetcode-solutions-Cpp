class Solution {
public:
    int maxProfit(vector<int>& prices) {
        vector<int> maxProfit;
        for (int i = 0; i < prices.size(); i++){
            if ((i+1) < prices.size()  && prices[i] < prices[i+1]){
                int base = prices[i];
                int ceil = prices[i];
                int z = i;
                for (int j = z; j < prices.size(); j++){
                    if ((j+1) < prices.size() && prices[j] < prices[j+1]){
                        ceil = prices[j+1];
                        i++;
                    }
                    else{
                        break;
                    }
                }
                cout  <<"ceil: " << ceil <<" base: " << base << endl;
                cout << ceil - base << endl;
                maxProfit.push_back(ceil - base); 
            }
        }
        int max = 0;
        if(maxProfit.size()>0){
            for (int i = 0; i< maxProfit.size(); i++){
                max += maxProfit[i];
            }
        }
        return max;
    }
};
