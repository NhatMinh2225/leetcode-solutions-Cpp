class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        if (s.size() == 0){
            return 0;
        }

        int left = 0;
        int right = 0;
        unordered_set <char> mp;
        int maxLen = 0;
        for (int i = 0; i < s.size(); i++){
            if (mp.count(s[i])){
                while (mp.count(s[i])){
                    mp.erase(s[left]);
                    left++;
                }
                mp.insert(s[i]);
                
                maxLen = max(maxLen, right-left);    
                right++;
            }
            else{
                mp.insert(s[i]);
                maxLen = max(maxLen, right-left);
                right ++;                

            }
        }


        return maxLen+1;
    }
};
